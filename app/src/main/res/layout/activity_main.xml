<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="Berita Acara Ujian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:text="Untuk membuat Berita Acara atau melihat maupun menyunting Berita Acara yang sudah ada silahkan pilih Jadwal Ujian dan Ruang Ujian dibawah ini"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_jadwal"
            android:hint="Jadwal Ujian"
            android:layout_marginBottom="10dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/ac_jadwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_ruang"
            android:hint="Ruang/ Kelas"
            android:layout_marginBottom="10dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/ac_ruang"
                android:inputType="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_berita_acara"
            android:text="Buat/Lihat/Sunting Berita Acara"
            android:paddingVertical="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="10dp"
            android:textAlignment="center"
            android:textSize="9sp"
            android:text="Copyright \u00a9 pplg.smkn1padaherang.sch.id (Aldhi Xar)"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>